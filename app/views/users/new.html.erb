<div class="forms-container">
  <div class="form-container">
    <%= form_with(model: @user, data: { turbo: false }) do |f| %>
      <h1>Create User (form with model)</h1>
      <div class="form-control">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-control">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-control">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-control">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit "Create my account", class: "btn" %>
    <% end %>
  </div>
  <div class="form-container">
    <%= form_with(url: users_path, scope: :user, data: { turbo: false }) do |f| %>
      <h1>Create User (form_with url)</h1>
      <div class="form-control">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-control">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-control">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-control">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit "Create my account", class: "btn" %>
    <% end %>
  </div>
  <div class="form-container">
    <%= form_with(url: users_path, method: :post, data: { turbo: false }) do %>
      <h1>Create User (form_for url no scope)</h1>
      <div class="form-control">
        <%= label_tag "user[name]", "Name" %>
        <%= text_field_tag "user[name]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[email]", "Email" %>
        <%= email_field_tag "user[email]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[password]", "Password" %>
        <%= password_field_tag "user[password]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[password_confirmation]", "Password" %>
        <%= password_field_tag "user[password_confirmation]" %>
      </div>

      <%= submit_tag "Create my account", class: "btn"%>
    <% end %>
  <div class="form-container">
    <%= form_for @user, data: { turbo: false } do |f| %>
      <h1>Create User</h1>
      <div class="form-control">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="form-control">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-control">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-control">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>

      <%= f.submit "Create my account", class: "btn" %>
    <% end %>
  </div>
  <div class="form-container">
    <%= form_tag users_path, method: :post do %>
      <h1>Create User (form_tag)</h1>
      <div class="form-control">
        <%= label_tag "user[name]", "Name" %>
        <%= text_field_tag "user[name]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[email]", "Email" %>
        <%= email_field_tag "user[email]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[password]", "Password" %>
        <%= password_field_tag "user[password]" %>
      </div>

      <div class="form-control">
        <%= label_tag "user[password_confirmation]", "Confirmation" %>
        <%= password_field_tag "user[password_confirmation]" %>
      </div>

      <%= submit_tag "Create User", class: "btn" %>
    <% end %>
  </div>
</div>
